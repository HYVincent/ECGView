<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vincent.ecg.MainActivity">

   <com.vincent.ecg.view.ECGView2
       android:visibility="gone"
        android:id="@+id/ecg_view"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <com.vincent.ecg.view.MyDataAll
        android:visibility="gone"
        android:id="@+id/data_all"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.vincent.ecg.view.MyBG
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <com.vincent.ecg.view.MyData
            android:id="@+id/mydata"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
